#!/bin/sh
if [ -z $1 ]; then
        echo "to_production_state <tftp_dir>"
        exit
fi
if [ -z $global.dhcp.tftp_server_name ]; then
        dhcp
fi
echo downloading bootloader
tftp $1/barebox-mini-image /barebox
if [ -f /barebox ]; then
        echo erasing bootloader
        erase /dev/mtd0.bootloader
        echo writing bootloader
        cp /barebox /dev/mtd0.bootloader
        rm /barebox
fi
