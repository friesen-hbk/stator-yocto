#!/bin/sh
if [ -z $1 ]; then
        echo "update_barebox <tftp_dir>"
        exit
fi
if [ -z $global.dhcp.tftp_server_name ]; then
        dhcp
fi
echo downloading bootloader
tftp $1/barebox-image /barebox
if [ -f /barebox ]; then
        echo writing bootloader
	barebox_update -t qspi -y /barebox
        rm /barebox
fi
